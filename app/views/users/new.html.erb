<%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'username' %>
      <%= text_field_tag 'name', @user.create.username %>
      <br /> <br />

      <%= label_tag 'email' %>
      <%= text_area_tag 'email', @user.create.email %>
      <br /> <br />

      <%= label_tag 'bio' %>
      <%= text_field_tag 'bio', @user.create.bio %>
      <br /> <br />

      <%= submit_tag "Create User" %>

    <% end %>